@page "/cart/{id}"
@page "/cart"
@inherits CartViewBase


<div class="row">
    <div class="col-12">
        <h5 class="float-start">Cart</h5>
        <a href="#" class="btn btn-danger btn-sm float-end">Checkout</a>
    </div>
</div>

<div class="row">

    <div class="col-12">

        @if (State.cartState.Cart.Count > 0 && State.cartState.Cart != null)
        {
            <table class="table-bordered table-responsive table-primary table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Shipment Fee</th>
                        <th>Tax</th>
                        <th>Quantity</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                @foreach (var c in State.cartState.Cart)
                {
                    <tbody>
                        <tr>
                            <td> @c.Products.Name </td>
                            <td> @c.Price </td>
                            <td> @c.ShipmentFee </td>
                            <td> @c.Tax </td>
                            <td>
                                <input type="number" value="@c.Quantity" min="1" max="100" />
                            </td> 
                            <td>
                                @*@onclick="()=> deleteProduct(c.Id)"*@
                                <button type="button" class="btn btn-outline-danger btn-sm" id="@c.Id" @ref="ReferedCart" @onclick="returnId">Delete</button>
                            </td>
                            <td>
                                <button class="btn btn-success btn-sm">Update</button>
                            </td>
                        </tr>
                    </tbody>
                }



            </table>
        }
        else
        {
            <h5>No products added yet. </h5>
        }
    </div>
</div>



